{
    "compilerOptions": {
        "pretty": true,
        "target": "es5",
        "lib": [ "es2015" ],
        "rootDir": ".",
        "outDir": "../dist",

        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "noEmitOnError": true,

        "strict": true,
        "alwaysStrict": true,

        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    },
    "exclude": [
      "examples",
    ]
}
